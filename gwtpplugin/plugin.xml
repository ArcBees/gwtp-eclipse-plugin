<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         id="application"
         point="org.eclipse.core.runtime.applications">
      <application>
         <run
               class="com.gwtplatform.plugin.Application">
         </run>
      </application>
   </extension>
   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            name="%perspective.name"
            class="com.gwtplatform.plugin.Perspective"
            id="com.gwtplatform.plugin.perspective">
      </perspective>
   </extension>
   <extension
         id="product"
         point="org.eclipse.core.runtime.products">
      <product
            application="gwtpplugin.application"
            name="gwtpplugin">
         <property
               name="appName"
               value="gwtpplugin">
         </property>
      </product>
   </extension>
   <extension
         point="org.eclipse.ui.actionSets">
      <actionSet
            id="com.gwtplatform.plugin.actionSet"
            label="%actionSet.label"
            visible="true">
         <action
               class="com.gwtplatform.plugin.MenuAction"
               icon="icons/gwtp-plugin.png"
               id="com.gwtplatform.plugin.action"
               label="%action.label"
               state="true"
               style="pulldown"
               toolbarPath="GWTP"
               tooltip="%action.tooltip">
         </action>
      </actionSet>
   </extension>
   <extension
         point="org.eclipse.ui.propertyPages">
      <page
            class="com.gwtplatform.plugin.view.GwtPropertyPage"
            id="com.gwtplatform.plugin.view.GwtPropertyPage"
            name="%page.name">
         <enabledWhen>
            <adapt
                  type="org.eclipse.core.resources.IProject">
               <test
                     property="org.eclipse.core.resources.projectNature"
                     value="com.google.gwt.eclipse.core.gwtNature">
               </test>
            </adapt>
         </enabledWhen>
      </page>
   </extension>
   <extension
         point="org.eclipse.ui.newWizards">
      <category
            id="com.gwtplatform.plugin"
            name="%category.name">
      </category>
      <wizard
            category="com.gwtplatform.plugin"
            class="com.gwtplatform.plugin.wizard.newproject.NewProjectWizard"
            icon="icons/gwtp-plugin.png"
            id="com.gwtplatform.plugin.wizard.NewProjectWizard"
            name="%wizard.name"
            project="true">
      </wizard>
      <wizard
            category="com.gwtplatform.plugin"
            class="com.gwtplatform.plugin.wizard.newaction.NewActionWizard"
            icon="icons/gwtp-plugin.png"
            id="com.gwtplatform.plugin.wizard.NewActionWizard"
            name="%wizard.name.0"
            project="false">
      </wizard>
      <wizard
            category="com.gwtplatform.plugin"
            class="com.gwtplatform.plugin.wizard.newevent.NewEventWizard"
            icon="icons/gwtp-plugin.png"
            id="com.gwtplatform.plugin.wizard.NewEventWizard"
            name="%wizard.name.1"
            project="false">
      </wizard>
      <wizard
            category="com.gwtplatform.plugin"
            class="com.gwtplatform.plugin.wizard.newmodel.NewModelWizard"
            icon="icons/gwtp-plugin.png"
            id="com.gwtplatform.plugin.wizard.NewModelWizard"
            name="%wizard.name.2"
            project="false">
      </wizard>
      <wizard
            category="com.gwtplatform.plugin"
            class="com.gwtplatform.plugin.wizard.newpresenter.NewPresenterWizard"
            icon="icons/gwtp-plugin.png"
            id="com.gwtplatform.plugin.wizard.NewPresenterWizard"
            name="%wizard.name.3"
            project="false">
      </wizard>
   </extension>

</plugin>
